<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login</title>

  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #1c1e21;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-box {
      background: #1c1e21;
      border: 2px solid #e45305;
      padding: 40px;
      border-radius: 12px;
      width: 350px;
      box-shadow: 0px 0px 20px rgba(0,0,0,0.4);
      color: #f5f5f5;
    }

    h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #fff;
    }

    label {
      font-size: 14px;
    }

    input {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border-radius: 8px;
      border: none;
      outline: none;
    }

    input[type="text"],
    input[type="password"] {
      background: #ffffff11;
      color: white;
    }

    .btn {
      width: 100%;
      padding: 12px;
      background: #e45305;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      margin-top: 10px;
    }

    .btn:hover {
      background: #c34204;
    }

    .btn:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .error {
      background: #ff4d4d;
      color: white;
      text-align: center;
      padding: 8px;
      border-radius: 6px;
      margin-bottom: 12px;
      font-size: 14px;
    }
  </style>
</head>

<body>

  <div class="login-box">
    <h2>Admin Login</h2>

    <!-- ✅ ERROR MESSAGE FROM BACKEND -->
    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form action="/admin/login" method="POST" id="loginForm">

      <label>Username</label>
      <input
        type="text"
        name="username"
        placeholder="Enter admin username"
        required
      />

      <label>Password</label>
      <input
        type="password"
        name="password"
        placeholder="Enter password"
        required
      />

      <button class="btn" type="submit" id="loginBtn">
        Login
      </button>

    </form>
  </div>

  <!-- ✅ SMALL UX SCRIPT -->
  <script>
    const form = document.getElementById("loginForm");
    const btn = document.getElementById("loginBtn");

    form.addEventListener("submit", () => {
      btn.disabled = true;
      btn.innerText = "Checking...";
    });
  </script>

</body>
</html>
