<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= player ? 'Edit Player' : 'Add Player' %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>

<%- include('header') %>

<div class="player-form-container">

  <h2 class="player-form-title">
    <%= player ? 'Edit Player' : 'Add New Player' %>
  </h2>

  <!-- FORM -->
  <form
    method="POST"
    enctype="multipart/form-data"
    action="<%= player ? '/admin/update-player/' + player.id : '/admin/add-player' %>"
  >

    <!-- IMAGE -->
    <div class="player-image-box">
<!-- PLAYER IMAGE PREVIEW -->
      <img
        id="playerPreviewImage"
        class="player-photo-preview"
        src="<%= player && player.image 
              ? '/uploads/' + player.image 
              : '/images/default-player.png' %>"
        alt="Player Image"
      />
      <!-- FILE INPUT -->
      <label class="player-upload-label">
        Browse Player Photo
        <input
          type="file"
          name="image"
          id="imageFile"
          accept="image/*"
          <%= (typeof player !== 'undefined' && player) ? '' : 'required' %>
        >
      </label>
    </div>

    <div class="player-form-grid">

      <div class="form-group full-width">
        <label>Name of the Player</label>
        <input type="text" name="name" value="<%= player ? player.name : '' %>" required>
      </div>

      <div class="form-group">
        <label>Role of the Player</label>
        <select name="role" required>
          <option value="">Select Role</option>
          <option value="Batter" <%= player && player.role === 'Batter' ? 'selected' : '' %>>Batter</option>
          <option value="Bowler" <%= player && player.role === 'Bowler' ? 'selected' : '' %>>Bowler</option>
          <option value="All-Rounder" <%= player && player.role === 'All-Rounder' ? 'selected' : '' %>>All-Rounder</option>
          <option value="Wicket Keeper" <%= player && player.role === 'Wicket Keeper' ? 'selected' : '' %>>Wicket Keeper</option>
        </select>
      </div>

      <div class="form-group">
        <label>Age</label>
        <input type="number" name="age" min="5" max="60" value="<%= player ? player.age : '' %>">
      </div>

      <div class="form-group">
        <label>Mobile Number</label>
        <input type="tel" name="mobile" value="<%= player ? player.mobile : '' %>" required>
      </div>

      <div class="form-group">
        <label>Instagram ID (Optional)</label>
        <input type="text" name="instagram" value="<%= player ? player.instagram : '' %>">
      </div>

      <div class="form-group full-width">
        <label>Description (Optional)</label>
        <textarea name="description" rows="4"><%= player ? player.description : '' %></textarea>
      </div>

    </div>

    <button type="submit" class="player-submit-btn">
      <%= player ? 'Update Player' : 'Add Player' %>
    </button>

  </form>

</div>

<!-- IMAGE PREVIEW SCRIPT -->
<script>
  const imageInput = document.getElementById("imageFile");
  const previewImage = document.getElementById("playerPreviewImage");

  imageInput.addEventListener("change", function () {
    const file = this.files[0];
    if (!file) return;

    const reader = new FileReader();
    reader.onload = () => previewImage.src = reader.result;
    reader.readAsDataURL(file);
  });
</script>

</body>
</html>
