<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>2024 Tournament Album</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    body {
      background: linear-gradient(to bottom, #f0f0f0, #ffffff);
      overflow: hidden;
    }

    h1 {
      text-align: center;
      padding: 20px 0;
      font-size: 28px;
      color: #444;
      letter-spacing: 1px;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }

    /* Back Button */
    #backBtn {
      margin: 10px auto 20px auto;
      display: block;
      padding: 10px 20px;
      font-size: 16px;
      background-color: #e45305;
      color: #fff;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
      transition: 0.3s;
    }

    #backBtn:hover {
      background-color: #0b0b0b;
    }

    .album-container {
      position: relative;
      width: 90%;
      max-width: 1000px;
      margin: 0 auto;
      overflow: hidden;
      border-radius: 15px;
      background: #fff;
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .album-wrapper {
      display: flex;
      transition: transform 0.6s ease-in-out;
    }

    .photo {
      min-width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      overflow: hidden;
      border-radius: 15px;
      cursor: pointer;
      background: whitesmoke;
    }

    .photo img {
      width: auto;
      height: 75vh;
      max-width: 100%;
      object-fit: contain;
      border-radius: 15px;
      transition: transform 0.5s ease, filter 0.5s ease;
    }

    .photo:hover img {
      transform: scale(1.05);
      filter: brightness(1.1);
    }

    /* Overlay for image number */
    .photo::after {
      content: attr(data-number);
      position: absolute;
      bottom: 10px;
      right: 15px;
      background: rgba(0,0,0,0.5);
      color: #fff;
      padding: 6px 12px;
      border-radius: 12px;
      font-size: 14px;
      font-weight: 500;
    }

    /* Navigation Buttons */
    .nav-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 50px;
      height: 50px;
      border: none;
      border-radius: 50%;
      background: rgb(194, 84, 74);
      color: #fff;
      font-size: 24px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 10;
      transition: 0.3s;
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .nav-btn:hover {
      background: #0b0b0b;
    }

    #prev { left: 15px; }
    #next { right: 15px; }

    /* Mobile responsiveness */
    @media(max-width: 414px){
      h1 { font-size: 22px; padding: 15px; }
      #backBtn { padding: 8px 160px; font-size: 14px; }
      .photo { height: 60vh; }
      .nav-btn { width: 40px; height: 40px; font-size: 18px; }
    }
  </style>
</head>
<body>

  <h1>2024 Tournament Album</h1>
  <button id="backBtn">Back</button>

  <div class="album-container">
    <button class="nav-btn" id="prev">&#10094;</button>
    <div class="album-wrapper" id="albumWrapper">
      <div class="photo" data-number="1/20"><img src="/img/2024/group.jpg" alt=""></div>
      <div class="photo" data-number="2/20"><img src="/img/2024/1.jpg" alt=""></div>
      <div class="photo" data-number="3/20"><img src="/img/2024/2.jpg" alt=""></div>
      <div class="photo" data-number="4/20"><img src="/img/2024/3.jpg" alt=""></div>
      <div class="photo" data-number="5/20"><img src="/img/2024/4.jpg" alt=""></div>
      <div class="photo" data-number="6/20"><img src="/img/2024/5.jpg" alt=""></div>
      <div class="photo" data-number="7/20"><img src="/img/2024/6.jpg" alt=""></div>
      <div class="photo" data-number="8/20"><img src="/img/2024/7.jpg" alt=""></div>
      <div class="photo" data-number="9/20"><img src="/img/2024/8.jpg" alt=""></div>
      <div class="photo" data-number="10/20"><img src="/img/2024/9.jpg" alt=""></div>
      <div class="photo" data-number="11/20"><img src="/img/2024/10.jpg" alt=""></div>
      <div class="photo" data-number="12/20"><img src="/img/2024/11.jpg" alt=""></div>
      <div class="photo" data-number="13/20"><img src="/img/2024/12.jpg" alt=""></div>
      <div class="photo" data-number="14/20"><img src="/img/2024/13.jpg" alt=""></div>
      <div class="photo" data-number="15/20"><img src="/img/2024/14.jpg" alt=""></div>
      <div class="photo" data-number="16/20"><img src="/img/2024/15.jpg" alt=""></div>
      <div class="photo" data-number="17/20"><img src="/img/2024/16.jpg" alt=""></div>
      <div class="photo" data-number="18/20"><img src="/img/2024/17.jpg" alt=""></div>
      <div class="photo" data-number="19/20"><img src="/img/2024/18.jpg" alt=""></div>
      <div class="photo" data-number="20/20"><img src="/img/2024/19.jpg" alt=""></div>
    </div>
    <button class="nav-btn" id="next">&#10095;</button>
  </div>

  <script>
    const wrapper = document.getElementById("albumWrapper");
    const photos = document.querySelectorAll(".photo");
    const prevBtn = document.getElementById("prev");
    const nextBtn = document.getElementById("next");
    const backBtn = document.getElementById("backBtn");
    let currentIndex = 0;

    function updateSlider() {
      wrapper.style.transform = `translateX(-${currentIndex * 100}%)`;
    }

    nextBtn.addEventListener("click", () => {
      currentIndex = (currentIndex + 1) % photos.length;
      updateSlider();
    });

    prevBtn.addEventListener("click", () => {
      currentIndex = (currentIndex - 1 + photos.length) % photos.length;
      updateSlider();
    });

    backBtn.addEventListener("click", () => {
      window.history.back();
    });
  </script>
</body>
</html>
